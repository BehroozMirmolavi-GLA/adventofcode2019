  df[3] <- possibilities[x, ]$y
  for (i in seq(from = 1,
                to = length(df),
                by = 4)) {
    if (df[i] == 1) {
      df[df[i + 3] + 1] <- df[df[i + 1] + 1] + df[df[i + 2] + 1]
    } else if (df[i] == 2) {
